    </view>
    <view class="soma-shopname">35号私厨</view>
    <view class="soma-ft">
      <view class='item'>
        <label class="digit">9.0</label>
        <label class='txt'>口味</label>
      </view>
      <view class='item'>
        <label class="digit">8.8</label>
        <label class='txt'>服务</label>
      </view>
      <view class='item'>
        <label class="digit">9.0</label>
        <label class='txt'>环境</label>
      </view>
      <view class='item'>
